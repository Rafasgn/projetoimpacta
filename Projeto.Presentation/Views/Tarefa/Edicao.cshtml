@model Projeto.Presentation.Models.TarefaEdicaoModel
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h5>Atualização de Tarefa</h5>
Preencha os campos para atualizar a tarefa.
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdTarefa)

    <div class="row">
        <div class="col-md-6">
            <label>Título da Tarefa:</label>
            @Html.TextBoxFor(model => model.Titulo,
            new
            {
            @class = "form-control",
            @placeholder = "Digite aqui"
            })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Titulo)
            </span>
            <br />

            <input type="submit" value="Atualizar Tarefa"
                   class="btn btn-success btn-sm" />

            <a href="/tarefa/consulta" class="btn btn-secondary btn-sm">Voltar</a>
        </div>

    </div>



}
<br />
