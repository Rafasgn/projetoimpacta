@model Projeto.Presentation.Models.UsuarioCadastroModel
@using Projeto.Infra.Data.Enums 

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container mt-3">
    <h3>Criar Conta de Usuário</h3>

    @using (Html.BeginForm())
    {
        <label>Nome do Usuário:</label>
        @Html.TextBoxFor(model => model.Nome,
        new
        {
        @class = "form-control col-md-4",
        @placeholder = "Digite aqui"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
        <br />

        <label>Email de Acesso:</label>
        @Html.TextBoxFor(model => model.Email,
        new
        {
        @class = "form-control col-md-4",
        @placeholder = "Digite aqui"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
        <br />

        <label>Senha de Acesso:</label>
        @Html.PasswordFor(model => model.Senha,
        new
        {
        @class = "form-control col-md-4",
        @placeholder = "Digite aqui"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </span>
        <br />

        <label>Confirme sua Senha:</label>
        @Html.PasswordFor(model => model.SenhaConfirmacao,
        new
        {
        @class = "form-control col-md-4",
        @placeholder = "Digite aqui"
        })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
        </span>
        <br />

        <label>Permissão de Acesso:</label>
        @Html.DropDownListFor(model => model.Permissao,
                           Html.GetEnumSelectList(typeof(Permissao)),
                           "Escolha uma opção",
                           new { @class = "form-control col-md-4" })

        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
        </span>
        <br />

        <input type="submit" class="btn btn-sm btn-dark"
               value="Realizar Cadastro" />
    }
</div>
